<v-snackbar v-model="snackbar.visible"
            :color="snackbar.color"
            :multi-line="true"
            :timeout="snackbar.timeout"
            :vertical="true">
    {{ snackbar.message }}
    <v-btn dark
           flat
           v-on:click="snackbar.visible = false">
        Fermer
    </v-btn>
</v-snackbar>